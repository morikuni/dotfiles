"vi互換モードを無効
set nocompatible

"エンコーディングの指定
set encoding=utf-8
scriptencoding utf-8

"変更があったファイルを自動読み込み
set autoread

"保存されてないファイルがあるときは確認
set confirm

"ヤンクでクリップボードにコピー
set clipboard=unnamed

"スワップファイルを作成
set directory=~/.vim/swap
set swapfile

"バックアップファイルを作成しない
set nobackup

"undoを永続化
set undodir=~/.vim/undo
set undofile

"ビープ音の代わりに画面をフラッシュ
set visualbell

"マウスを有効化
set mouse=a

"スクロール時のオフセット
set scrolloff=8
set sidescrolloff=16
"スクロールする単位
set sidescroll=1

"補完の表示設定
set completeopt=menu

"保存していなくても画面を切り替えられる
set hidden

"---------
" 検索
"---------

"検索結果をハイライト
set hlsearch
"検索で大文字小文字を無視
set ignorecase
"大文字が含まれる場合は区別
set smartcase
"インクリメンタルサーチ
set incsearch

"バックスペースを有効化
set backspace=indent,eol,start

"行末と行頭をカーソルで移動できるように
set whichwrap=b,s,<,>,[,]

"Tabをスペースに変換しない
set expandtab
"改行後に現在のインデントを引き継ぐ
set autoindent
"より賢いインデント
set smartindent
"自動インデント幅
set shiftwidth=4
"インデント幅
set softtabstop=4
"タブ幅を設定
set tabstop=4

"Esc二回でハイライトを無効化
nnoremap _ :nohlsearch<CR>

"前回のインサートテキストを貼り付けを無効化
inoremap <C-@> <NOP>

"\で行末移動
nnoremap - ^
vnoremap - ^
nnoremap ^ $
vnoremap ^ $

"インサートモードでemacsっぽく
inoremap <C-a> <Home>
inoremap <C-e> <End>

inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-h> <Left>
inoremap <C-l> <Right>
